%h1 New plan
= form_for(@plan) do |f|
  - if @plan.errors.any?
    #error_explanation
      %h2
        = pluralize(@plan.errors.count, "error")
        prohibited this plan from being saved:
      %ul
        - @plan.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :price
    %br/
    = f.text_field :price, precision: 0
  .actions
    = f.submit
= link_to 'Back', plans_path